@model WebAppModel.Models.Dtos.BlogItemDto
@{
    Layout = "_Layout";
}

<h1>Create Blog Post</h1>

<fieldset>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary()
        <p>
            @Html.LabelFor(blogItem => blogItem.Title)
            @Html.EditorFor(blogItem => blogItem.Title)
            @Html.ValidationMessageFor(blogItem => blogItem.Title)
        </p>

        <p>
            @Html.LabelFor(blogItem => blogItem.Body)
            @Html.TextAreaFor(blogItem => blogItem.Body)
            @Html.ValidationMessageFor(blogItem => blogItem.Body)
        </p>

        <p>
            <button type="submit">Create Post</button>
        </p>
    }
</fieldset>